<h1>Sing in</h1>

<%= form_with url: sing_in_path do |form| %>

<div class= "mb-3">
    <%= form.label :email%>
    <%= form.text_field :email, class: "form-control", placeholder: "Jhon@Doe.com" %>
</div>
<div class= "mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
</div>

<div class="mb-3">
    <%= form.submit "Sing In", class: "btn btn-primary"%> 
</div>

<% end %>